# Application Settings
APP_NAME=starter-fastapi
APP_VERSION=0.1.0
APP_DESCRIPTION=Production-ready FastAPI starter template
ENVIRONMENT=development

# Server Settings
HOST=0.0.0.0
PORT=8000
RELOAD=true

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_CREDENTIALS=true
CORS_METHODS=*
CORS_HEADERS=*

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=json

# API Settings
API_V1_PREFIX=/api/v1

# Security (generate a secure secret key for production)
SECRET_KEY=your-secret-key-here-change-in-production

# Database (placeholder for future use)
# DATABASE_URL=postgresql://user:password@localhost/dbname

# Redis (placeholder for future use)
# REDIS_URL=redis://localhost:6379/0

# External APIs (placeholder for future use)
# EXTERNAL_API_KEY=your-api-key-here
